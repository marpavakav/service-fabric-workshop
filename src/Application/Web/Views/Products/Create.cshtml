@model Product
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form asp-controller="Product" asp-action="Create" method="post">
    <table>
        <tr>
            <td>Name:</td>
            <td><input asp-for="Name" type="text" /></td>
        </tr>
        <tr>
            <td>Price:</td>
            <td><input asp-for="Price" type="text" /></td>
        </tr>
    </table>
    <span><button type="submit">Submit</button></span>
</form>