@model System.Collections.Generic.IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>All Products</h1>

@Html.ActionLink("Create", "Create")

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@Html.ActionLink(p.Name, "Update", new { id = p.Id })</td>
                <td>@p.Price</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = p.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

